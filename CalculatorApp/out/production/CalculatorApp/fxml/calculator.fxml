<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<GridPane fx:controller="calculator.Controller"
          stylesheets="/css/calculator.css"
          xmlns:fx="http://javafx.com/fxml" >
    <VBox >
        <TextField fx:id="window"
                    text="0"
                    GridPane.rowIndex="0"
                    GridPane.valignment="TOP"
                    prefWidth="220"
                    prefHeight="65"
                    alignment="CENTER_RIGHT"
        />
                   <!--onKeyPressed ="#keyPress"
                   onKeyReleased="#keyRelease"-->



        <HBox>
            <Button fx:id="AC"
                    onAction="#handleClear"
                    text="AC"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button fx:id="plusMinus"
                    onAction="#handlePlusMinus"
                    text="±"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button fx:id="percent"
                    onAction="#handlePercent"
                    text="\%"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button styleClass="operators"
                    onAction="#handleDivision"
                    fx:id="div"
                    text="÷"
                    prefWidth="55"
                    prefHeight="55"
            />

        </HBox>
        <HBox>
            <Button fx:id="seven"
                    onAction="#handleSeven"
                    text="7"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button fx:id="eight"
                    onAction="#handleEight"
                    text="8"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button fx:id="nine"
                    onAction="#handleNine"
                    text="9"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button styleClass="operators"
                    onAction="#handleMultiply"
                    fx:id="mult"
                    text="x"
                    prefWidth="55"
                    prefHeight="55"
            />

        </HBox>
        <HBox>
            <Button fx:id="four"
                    onAction="#handleFour"
                    text="4"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button fx:id="five"
                    onAction="#handleFive"
                    text="5"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button fx:id="six"
                    onAction="#handleSix"
                    text="6"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button styleClass="operators"
                    fx:id="minus"
                    onAction="#handleMinus"
                    text="-"
                    prefWidth="55"
                    prefHeight="55"
            />

        </HBox>
        <HBox>
            <Button fx:id="one"
                    onAction="#handleOne"
                    text="1"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button fx:id="two"
                    onAction="#handleTwo"
                    text="2"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button fx:id="three"
                    onAction="#handleThree"
                    text="3"
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button styleClass="operators"
                    onAction="#handlePlus"
                    fx:id="plus"
                    text="+"
                    prefWidth="55"
                    prefHeight="55"
            />

        </HBox>
        <HBox>
            <Button fx:id="zero"
                    onAction="#handleZero"
                    text="0"
                    prefWidth="110"
                    prefHeight="55"

            />
            <Button fx:id="dot"
                    onAction="#handleDot"
                    text="."
                    prefWidth="55"
                    prefHeight="55"
            />
            <Button styleClass="operators"
                    fx:id="equals"
                    onAction="#handleEquals"
                    text="="
                    prefWidth="55"
                    prefHeight="55"
            />


        </HBox>

    </VBox>
</GridPane>